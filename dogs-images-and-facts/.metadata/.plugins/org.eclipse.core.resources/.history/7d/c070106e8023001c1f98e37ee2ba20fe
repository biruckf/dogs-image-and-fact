package com.codeTest.dogsImageAndFact.dogsUtil;

import java.util.List;
import java.util.stream.Collectors;

import com.codeTest.dogsImageAndFact.model.DogsFactAndImage;

public class ModelMapperUtil {
	
	private static ModelMapperUtil modelMapper = new ModelMapperUtil();

	private List<DogsFactAndImage> listOfDogs;

	public ModelMapperUtil(List<DogsFactAndImage> listOfDogs) {
		this.listOfDogs = listOfDogs;
	}

	public List<DogsFactAndImage> getListOfDogs() {
		return listOfDogs;
	}

	public void setListOfDogs(List<DogsFactAndImage> listOfDogs) {
		this.listOfDogs = listOfDogs;
	}
	
	<S, T> List<T> mapList(List<S> source, Class<T> targetClass) {
		ModelMapperUtil modelMapper=new ModelMapperUtil();
		
	    return source
	      .stream()
	      .map(element -> modelMapper.map(element, targetClass))
	      .collect(Collectors.toList());
	}
	
	
}
